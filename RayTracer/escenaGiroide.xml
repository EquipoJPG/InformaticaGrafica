<escena 
	antialiasing="1" 
	file="./escenas/escena.png" 
	rebotes="1" 
	ambiente="0.3" 
	epsilon="1e-3"
	multithreading="4"
	cajas="1">

	<debug>
		<ambiente>1</ambiente>
		<difusa>1</difusa>
		<especular>1</especular>
		<reflejo>1</reflejo>
		<transparente>1</transparente>
	</debug>

	<!-- punto de vista (x, y, z) -->
	<pov x="340" y="110" z="180">
		<columnas>1024</columnas>
		<filas>720</filas>
		<anchura>4</anchura>
		<altura>3</altura>
		<focal>5</focal>
	</pov>
	
	<!-- lista de focos -->
	<focos>
		
		<foco x="80" y="80" z="200">
			<intensidad>2</intensidad>
			<color r="255" g="255" b="255"/>
		</foco>
		<foco x="200" y="250" z="200">
			<intensidad>2</intensidad>
			<color r="255" g="255" b="255"/>
		</foco>
	</focos>
	
	<!-- lista de cajas -->
	<cajas>
		<!-- lista de objetos dentro de una caja -->
		
		<caja>
		<!-- plano suelo (rojo) -->
			<plano x="0" y="0" z="0">
				<topleft x="0" y="0" z="0"/>
				<topright x="200" y="0" z="0"/>
				<bottomleft x="0" y="0" z="200"/>
				<bottomright x="200" y="0" z="200"/>
				
				<global>1</global>	<!-- escala global -->
				<escala x="1" y="1" z="1"/>	<!-- escala local -->
				<rotacion x="0" y="0" z="0"/>	<!-- rotacion en ejes X, Y, Z -->
				<simetria x="0" y="0" z="0"/>	<!-- simetria en ejes X, Y, Z -->
				<cizalla x="0" y="0" z="0"/>	<!-- cizalla en ejes X, Y, Z -->
				
				<!-- material -->
				<material>
					<color r="255" g="0" b="0"/>
					<difusa>0.4</difusa>
					<especular>0</especular>
					<reflectante>00</reflectante>
					<transparente>0</transparente>
					<shiny>100</shiny>
					<indiceRefraccion>1</indiceRefraccion>
				</material>
			</plano>
			
			<!-- plano izquierda (verde) -->
			<plano x="0" y="0" z="0">
				<topleft x="0" y="200" z="200"/>
				<topright x="0" y="200" z="0"/>
				<bottomleft x="0" y="0" z="200"/>
				<bottomright x="0" y="0" z="0"/>
				
				<global>1</global>	<!-- escala global -->
				<escala x="1" y="1" z="1"/>	<!-- escala local -->
				<rotacion x="0" y="0" z="0"/>	<!-- rotacion en ejes X, Y, Z -->
				<simetria x="0" y="0" z="0"/>	<!-- simetria en ejes X, Y, Z -->
				<cizalla x="0" y="0" z="0"/>	<!-- cizalla en ejes X, Y, Z -->
				
				<!-- material -->
				<material>
					<color r="50" g="80" b="30"/>
					<difusa>0.4</difusa>
					<especular>0</especular>
					<reflectante>0</reflectante>
					<transparente>0</transparente>
					<shiny>100</shiny>
					<indiceRefraccion>1</indiceRefraccion>
				</material>
			</plano>
			
			<!-- plano derecha (azul) -->
			<plano x="0" y="1" z="0">
				<topleft x="0" y="1" z="0"/>
				<topright x="1" y="1" z="0"/>
				<bottomleft x="0" y="0" z="0"/>
				<bottomright x="1" y="0" z="0"/>
				
				<global>200</global>	<!-- escala global -->
				<escala x="1" y="1" z="1"/>	<!-- escala local -->
				<rotacion x="0" y="0" z="0"/>	<!-- rotacion en ejes X, Y, Z -->
				<simetria x="0" y="0" z="0"/>	<!-- simetria en ejes X, Y, Z -->
				<cizalla x="0" y="0" z="0"/>	<!-- cizalla en ejes X, Y, Z -->
				
				<!-- material -->
				<material>
					<color r="100" g="100" b="255"/>
					<difusa>0.4</difusa>
					<especular>0</especular>
					<reflectante>0</reflectante>
					<transparente>0</transparente>
					<shiny>100</shiny>
					<indiceRefraccion>1.1</indiceRefraccion>
				</material>
			</plano>
			
			<!-- espejo en plano azul -->
			<plano x="0" y="0" z="0">
				<topleft x="0" y="1" z="0"/>
				<topright x="1" y="1" z="0"/>
				<bottomleft x="0" y="0" z="0"/>
				<bottomright x="1" y="0" z="0"/>
				
				<global>60</global>	<!-- escala global -->
				<escala x="1" y="1" z="1"/>	<!-- escala local -->
				<rotacion x="0" y="0" z="0"/>	<!-- rotacion en ejes X, Y, Z -->
				<simetria x="0" y="0" z="0"/>	<!-- simetria en ejes X, Y, Z -->
				<cizalla x="0" y="0" z="0"/>	<!-- cizalla en ejes X, Y, Z -->
				
				<!-- material -->
				<material>
					<color r="200" g="200" b="255"/>
					<difusa>0.2</difusa>
					<especular>0.3</especular>
					<reflectante>0.8</reflectante>
					<transparente>0</transparente>
					<shiny>180</shiny>
					<indiceRefraccion>1.1</indiceRefraccion>
				</material>
			</plano>
			
		</caja>
		
		<caja>
		
			<!-- esfera reflectante -->
			<esfera x="55" y="20" z="90">	<!-- traslacion -->
				<global>20</global>	<!-- escala global -->
				<escala x="1" y="1" z="1"/>	<!-- escala local -->
				<rotacion x="0" y="0" z="0"/>	<!-- rotacion en ejes X, Y, Z -->
				<simetria x="0" y="0" z="0"/>	<!-- simetria en ejes X, Y, Z -->
				<cizalla x="0" y="0" z="0"/>	<!-- cizalla en ejes X, Y, Z -->
				
				<!-- material -->
				<material>
					<color r="166" g="100" b="80"/>
					<difusa>0.3</difusa>
					<especular>0.2</especular>
					<reflectante>0.5</reflectante>
					<transparente>0</transparente>
					<shiny>100</shiny>
					<indiceRefraccion>0.9</indiceRefraccion>
				</material>
			</esfera>
			
			<!-- esfera reflectante y refractante -->
			<esfera x="55" y="20" z="140">	<!-- traslacion -->
				<global>20</global>	<!-- escala global -->
				<escala x="1" y="1" z="1"/>	<!-- escala local -->
				<rotacion x="0" y="0" z="0"/>	<!-- rotacion en ejes X, Y, Z -->
				<simetria x="0" y="0" z="0"/>	<!-- simetria en ejes X, Y, Z -->
				<cizalla x="0" y="0" z="0"/>	<!-- cizalla en ejes X, Y, Z -->
				
				<!-- material -->
				<material>
					<color r="166" g="198" b="65"/>
					<difusa>0.2</difusa>
					<especular>0.2</especular>
					<reflectante>0.5</reflectante>
					<transparente>0.5</transparente>
					<shiny>150</shiny>
					<indiceRefraccion>0.9</indiceRefraccion>
				</material>
			</esfera>
			
		</caja>
		
		<caja>
			<!-- figura -->
            <figura path="plyFiles/Giroide.ply" x="40" y="15" z="30">
                
                <global>1.5</global>    <!-- escala global -->
                <escala x="-1" y="-1" z="-1"/>    <!-- escala local -->
                <rotacion x="0" y="0" z="0"/>    <!-- rotacion en ejes X, Y, Z -->
                <simetria x="0" y="0" z="0"/>    <!-- simetria en ejes X, Y, Z -->
                <cizalla x="0" y="0" z="0"/>    <!-- cizalla en ejes X, Y, Z -->
                
                <!-- material -->
				<material>
					<!-- <color r="255" g="0" b="0"/> -->
					<difusa>0.5</difusa>
					<especular>0</especular>
					<reflectante>0</reflectante>
					<transparente>0</transparente>
					<shiny>100</shiny>
					<indiceRefraccion>1</indiceRefraccion>
				</material>
            </figura>
		</caja>
	</cajas>
	
</escena>